<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.duyi.onlinevideo.dao.">
    <!-- 字段映射 -->
    <resultMap id="courseTypeMap" type="CourseType">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="flag" property="flag" jdbcType="VARCHAR" />
    </resultMap>

    <!-- 表查询字段 -->
    <sql id="allColumns">
        ct.id, ct.name, ct.flag
    </sql>

    <!-- 查询所有数据 -->
    <select id="findCourseTypeAll" resultMap="courseTypeMap">
        SELECT
        <include refid="allColumns" />
        FROM course_type ct
    </select>
    
    <!-- 根据条件参数查询数据列表 -->
    <select id="findCourseTypeByCondition" resultMap="courseTypeMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM course_type ct WHERE 1 = 1
        <if test="name != null and name != ''">
            AND ct.name LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="flag != null">
            AND ct.flag = #{flag}
        </if>
    </select>
    
    <!-- 根据主键查询数据 -->
    <select id="findCourseTypeByIds" resultMap="courseTypeMap" parameterType="list">
        SELECT
        <include refid="allColumns" />
        FROM course_type ct WHERE ct.id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertCourseType" parameterType="courseType">
        INSERT INTO course_type (
            id, name, flag
        ) VALUES (
            #{id},
            #{name},
            #{flag}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateCourseType" parameterType="map">
        UPDATE course_type
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="flag != null">
                flag = #{flag}
            </if>
        </set>
        WHERE id = #{id}
    </update>
    
    <!-- 批量修改数据 -->
    <update id="updateCourseTypes" parameterType="list">
        <foreach collection="list" index="index" item="item" separator=";">
            UPDATE course_type
            <set>
                <if test="item.name != null">
                    name = #{item.name},
                </if>
                <if test="item.flag != null">
                    flag = #{item.flag}
                </if>
            </set>
            WHERE id = #{item.id}
        </foreach>
    </update>
    
    <!-- 根据主键删除数据 -->
    <delete id="deleteCourseTypeById" parameterType="int">
        DELETE FROM course_type WHERE id = #{id}
    </delete>
    
    <!-- 根据主键批量删除数据 -->
    <delete id="deleteCourseTypeByIds" parameterType="list">
        DELETE FROM course_type WHERE id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>